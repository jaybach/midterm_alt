<form method="post" action="/ratings/<%= @question.id %>">

  <div>
    <label for="question_rating">Your rating for this question:</label>
      <select id="rating" name="question_rating">
        <option value="1">
        <option value="2">
        <option value="3">
        <option value="4">
        <option value="5">
      </select>
  </div>

  <div>
    <button class="button" type="submit">Submit rating</button>
  </div>

</form>
