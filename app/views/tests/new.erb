<title>Create a new test</title>

<body>

<div class="container">

   <h1>Create a test:</h1>
   <br>

  <% if current_user %>

  <form method="post" action="/tests">

      <div>
        <label class="label" for="name">Name of test:</label>
        <input class="input" type="text" name="name" value="<%=@new_test.name if @new_test %>">
        <label class="label" for="logo">Logo:</label>
        <input class="input" type="text" name="logo">
      </div>

      <button type="submit" class="button 2, btn btn-default">Create test</button>
  </form>

</div>

<div class="container2">
  <h2>Your created tests:</h2>
    <% @user_tests = Test.where(user_id: current_user.id) %>
    <% @user_tests.each do |test| %>
      <div class="container3">
        <h3><a href="/tests/<%= test.id%>"><%= test.name %></a></h3>
      </div>
    <% end %>

  <% else %>

  <div>
      <strong>Access restricted. Please login first!</strong>
  </div>

  <% end %>
</div>


</body>
