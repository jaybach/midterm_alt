<!doctype html>
<!--[if IE 9]><html class="lt-ie10" lang="en" > <![endif]-->

    <link type="text/css" rel="stylesheet" href="/stylesheets/user.css"/>
    <link type="text/css" rel="stylesheet" href="/stylesheets/user_new.css"/>

    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.2/js/foundation.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/zepto/1.1.6/zepto.js"></script>
    <script src="../assets/js/modernizr.js"></script>
  </head>


<body>

<div class="container">
   <h1>Register now</h1>
   <br>
  <% if @new_user && @new_user.errors.any? %>
    <div>
      <strong>Some issues with your registration, please fix them:</strong>
      <ul>
        <% @new_user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if @error %>
    <div>
      <strong>There are some problems with your registration.  Please fix them:</strong>
      <p><%= @error %></p>
    </div>
  <% end %>
  <form method="post" action="/users">
    <div class="form-group">
      <label class="label" for="user_name">Username:</label>
      <input class="input" type="text" class="form-control" placeholder="choose a username" name="user_name" value="<%= @new_user.user_name if @new_user %>">
    </div>
    <div class="form-group">
      <label class="label" for="name">Your name:</label>
      <input class="input" type="text" class="form-control" placeholder="your name" name="name" value="<%= @new_user.name if @new_user %>">
    </div>
    <div class="form-group">
      <label class="label" for="name">Your email:</label>
      <input class="input" type="text" class="form-control" placeholder="your email" name="email" value="<%= @new_user.email if @new_user %>">
    </div>
    <div class="form-group">
      <label class="label" for="name">Your company:</label>
      <input class="input" type="text" class="form-control" placeholder="your company" name="company" value="<%= @new_user.company if @new_user %>">
    </div>
    <div class="form-group">
      <label class="label" for="password">Your password:</label>
      <input class="input" type="password" class="form-control" placeholder="your password" name="password" value="<%= @new_user.password if @new_user %>">
    </div>
    <div class="form-group">
      <label class="label" for="password">Confirm password:</label>
      <input class="input" type="password" class="form-control" placeholder="reenter your password" name="password_confirmation">
    </div>
    <div class="form-group">
      <button class="button" type="submit" class="btn btn-default">Register</button>
    </div>
  </form>
</div>

</body>
